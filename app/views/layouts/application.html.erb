  </head>

  <body>
    <header>
      <h1>CoffeeLover Coffee Bar</h1>
    </header>

    <nav>
        <a href="/">Home</a>
        &nbsp;
        <a href="/menu">Menu</a>
        &nbsp;
        <a href="/music">Music</a>
        &nbsp;
        <a href="/jobs">Jobs</a>
        &nbsp;
        <a href="/users/sign_up">Sign up</a>
        &nbsp;
        <%= link_to "Sign in", user_session_path %>
        &nbsp;
        <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete } %>
