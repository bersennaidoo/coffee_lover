    <p class="alert"><%= alert %></p>
    <%= yield %>
    <footer>
      Copyright &copy; 2024 CoffeeLover Coffee Bar<br>
      <a href="mailto:bersennaidoo@coffeelover.com">bersennaidoo@coffeelover.com</a>
    </footer>
